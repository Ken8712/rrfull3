<div class="container">
  <h1>新しいルームを作成</h1>
  
  <%= form_with model: @room, local: true, class: 'room-form' do |form| %>
    <% if @room.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @room.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mb-3">
      <%= form.label :title, 'ルームタイトル', class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', placeholder: '例: 今日の振り返り' %>
    </div>

    <div class="form-actions">
      <%= form.submit 'ルームを作成', class: 'btn btn-primary' %>
      <%= link_to 'キャンセル', rooms_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
  
  <div class="info mt-4">
    <p class="text-muted">
      パートナー: <%= current_user.partner.name %>さん
    </p>
  </div>
</div>
