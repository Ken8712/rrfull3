<div class="container">
  <h1>ルームを編集</h1>
  
  <%= form_with model: @room, local: true, class: 'room-form' do |form| %>
    <% if @room.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @room.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mb-3">
      <%= form.label :title, 'ルームタイトル', class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= form.submit '更新', class: 'btn btn-primary' %>
      <%= link_to 'キャンセル', @room, class: 'btn btn-secondary' %>
    </div>
  <% end %>
  
  <div class="info mt-4">
    <p class="text-muted">
      作成日時: <%= @room.created_at.strftime('%Y/%m/%d %H:%M') %>
    </p>
  </div>
</div>
